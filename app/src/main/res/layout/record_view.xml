<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:padding="8dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:id="@+id/record_name"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="6dip"
                  android:textColor="#000000"
                  android:textStyle="bold"
                  android:textSize="20sp"/>
        <TextView android:id="@+id/record_tel"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="6dip"
                  android:textColor="#000000"
                  android:textStyle="bold"
                  android:textSize="20sp"
                  android:autoLink="phone"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:id="@+id/record_kubun"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentLeft="true"
                  android:layout_marginLeft="6dp"
                  android:textColor="#000000"
                  android:textStyle="bold"
                  android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView android:id="@+id/record_syozoku0"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@+id/record_kubun"
                  android:layout_marginLeft="8dp"
                  android:textColor="#000000"
                  android:textStyle="bold"
                  android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView android:id="@+id/record_syozoku"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@+id/record_syozoku0"
                  android:layout_marginLeft="8dp"
                  android:textColor="#000000"
                  android:textStyle="bold"
                  android:textAppearance="?android:attr/textAppearanceSmall"/>
        <TextView android:id="@+id/record_kinmu"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_toRightOf="@+id/record_syozoku"
                  android:layout_alignParentRight="true"
                  android:layout_marginLeft="8dp"
                  android:textColor="#000000"
                  android:textStyle="bold"
                  android:textAppearance="?android:attr/textAppearanceSmall"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView android:id="@+id/record_mail"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:layout_alignParentRight="true"
                  android:layout_marginRight="6dip"
                  android:textColor="#000000"
                  android:textStyle="bold"
                  android:textAppearance="?android:attr/textAppearanceSmall"
                  android:autoLink="email"/>
    </RelativeLayout>
</LinearLayout>